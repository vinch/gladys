lightergray = #f7f7f7
lightgray = #eee
gray = #ddd
grayalpha = rgba(221,221,221,0.5)
grayer = #aaa
darkgray = #666
darkergray = #333

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: 'agenda-mediumregular', sans-serif
  font-size: 62.5%
  -webkit-font-smoothing: antialiased
  background: url('/img/background.png')
  color: darkergray

a
  color: darkgray
  text-decoration: none
  &:hover
    color: black
    border-bottom: 1px solid darkgray

img
  display: block

.holder
  clearfix()
  width: 1000px
  margin: 0 auto

header
  height: 100px
  border-bottom: 1px solid gray
  h1
    float: left
    margin-top: 30px
    a
      display: block
      width: 152px
      height: 40px
      background: url('/img/logo.png')
      text-indent: -9999px
      &:hover
        background-position: 0 -40px
        border: 0
  nav, .social
    float: right
    height: 30px
    margin-top: 35px
  nav
    a
      display: block
      float: left
      line-height: 30px
      text-transform: uppercase
      font-size: 16px
      margin-right: 30px
      &.active
        color: darkergray
  .social
    a
      display: block
      float: left
      width: 30px
      height: 30px
      background: url('/img/social.png')
      text-indent: -9999px
      margin-right: 10px
      &:hover
        border: 0
      &.facebook
        background-position: 0 0
        &:hover
          background-position: 0 -30px
      &.twitter
        background-position: -30px 0
        &:hover
          background-position: -30px -30px
      &.youtube
        background-position: -60px 0
        &:hover
          background-position: -60px -30px
      &.itunes
        background-position: -90px 0
        &:hover
          background-position: -90px -30px

footer
  height: 50px
  border-top: 1px solid gray
  padding: 15px 0
  nav
    float: left
    height: 20px
    a
      display: block
      float: left
      line-height: 20px
      text-transform: uppercase
      font-size: 13px
      margin-right: 20px
      &.active
        color: darkergray
  p
    float: right
    line-height: 20px
    font-size: 13px
    text-transform: uppercase

.page
  min-height: 500px
  h2
    font-family: 'agenda-boldregular', sans-serif
    font-size: 30px
    font-weight: normal
    text-transform: uppercase
    color: darkgray
    height: 60px
    line-height: 60px
    background: grayalpha
    span
      display: block
      width: 1000px
      margin: 0 auto