lightergray = #f7f7f7
lightgray = #eee
gray = #ddd
grayalpha = rgba(221,221,221,0.5)
grayer = #aaa
darkgray = #666
darkergray = #333

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: 'agenda-mediumregular', sans-serif
  font-size: 62.5%
  -webkit-font-smoothing: antialiased
  background: url('/img/background.png')
  color: darkergray

a
  color: darkgray
  text-decoration: none
  &:hover
    color: black
    border-bottom: 1px solid darkgray

img
  display: block

.holder
  clearfix()
  width: 1000px
  margin: 0 auto

header
  height: 100px
  h1
    float: left
    margin-top: 30px
    a
      display: block
      width: 152px
      height: 40px
      background: url('/img/logo.png')
      text-indent: -9999px
      &:hover
        background-position: 0 -40px
        border: 0
  nav, .social
    float: right
    height: 30px
    margin-top: 35px
  nav
    a
      display: block
      float: left
      line-height: 30px
      text-transform: uppercase
      font-size: 16px
      margin-right: 30px
      &:hover
        border-bottom: 3px solid darkgray
      &.active
        color: darkergray
        border-bottom: 3px solid darkgray
        pointer-events: none
      &.news
        border-color: rgb(239, 159, 164)
      &.concerts
        border-color: rgb(153, 138, 192)
      &.photos
        border-color: rgb(146, 176, 219)
      &.videos
        border-color: rgb(151, 204, 158)
      &.bio
        border-color: rgb(241, 155, 125)
      &.contact
        border-color: rgb(254, 245, 158)
  .social
    a
      display: block
      float: left
      width: 30px
      height: 30px
      background: darkgray
      margin-right: 10px
      border-radius: 15px
      color: white
      text-align: center
      line-height: 30px
      font-size: 18px
      &:hover
        border: 0
        background: darkergray

footer
  height: 50px
  border-top: 1px solid gray
  padding: 15px 0
  nav
    float: left
    height: 20px
    a
      display: block
      float: left
      line-height: 20px
      text-transform: uppercase
      font-size: 13px
      margin-right: 20px
      &:hover
        border-bottom: 2px solid darkgray
      &.active
        color: darkergray
        border-bottom: 2px solid darkgray
        pointer-events: none
      &.news
        border-color: rgb(239, 159, 164)
      &.concerts
        border-color: rgb(153, 138, 192)
      &.photos
        border-color: rgb(146, 176, 219)
      &.videos
        border-color: rgb(151, 204, 158)
      &.bio
        border-color: rgb(241, 155, 125)
      &.contact
        border-color: rgb(254, 245, 158)
  p
    float: right
    line-height: 20px
    font-size: 13px
    text-transform: uppercase

.page
  min-height: 500px
  h2
    font-family: 'agenda-boldregular', sans-serif
    font-size: 30px
    font-weight: normal
    text-transform: uppercase
    color: darkgray
    height: 60px
    line-height: 60px
    background: grayalpha
    span
      display: block
      width: 1000px
      margin: 0 auto
  .holder
    padding: 30px 0 60px
    p
      font-size: 16px
      line-height: 1.4em
      margin-bottom: 15px