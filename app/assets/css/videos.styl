@import 'nib'
@import 'fonts'
@import 'common'

#videos
  h2
    background: rgba(151, 204, 158, 0.5)
  .holder
    .videos-container
      clearfix()
      .video-container
        position: relative
        overflow: hidden
        margin-bottom: 30px
        width: 485px
        height: 273px
        float: left
        margin-right: 30px
        &:nth-child(2n)
          margin-right: 0
        iframe, embed, object
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%

@media (max-width: 545px)
  #videos
    .holder
      .videos-container
        .video-container
          padding-bottom: 56.25%
          width: 100%
          height: 0
          margin-right: 0