*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  width: 100%
  height: 100%
  overflow: hidden

body
  background: #000

#fb
  position: absolute
  top: 15px
  right: 15px
  z-index: 100

#video
  display: none
  position: absolute
  top: 0
  left: 0
  object, embed
    width: 100%
    height: 100%
  #player, #layer
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
  #layer
    opacity: 0

#end
  display: none
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.9)
  #replay
    position: absolute
    top: 50%
    left: 50%
    width: 200px
    height: 80px
    margin-left: -100px
    margin-top: -40px
    background: white
    text-align: center
    line-height: 80px
    color: black
    text-transform: uppercase
    text-decoration: none
    font-size: 30px
    font-family: 'Helvetica', sans-serif
    font-weight: bold
    border-radius: 40px
    &:hover
      background: #ccc