@import 'nib'
@import 'fonts'
@import 'common'

#concerts
  h2
    background: rgba(153, 138, 192, 0.5)
  .holder
    table
      width: 100%
      tr
        cursor: pointer
        td
          padding: 10px
          font-size: 16px
          line-height: 1.4em
          border-bottom: 1px solid gray
          &:last-child
            text-align: right
            padding-right: 10px
        &:last-child
          td
            border: 0
        &:hover
          td
            background: lightgray

@media (max-width: 530px)
  #concerts
    .holder
      table
        tr
          td
            font-size: 12px
            &:last-child
              display: none